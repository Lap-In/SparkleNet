/* Compteur de mots */
    int tmp = 1;

    printf("%d\n", tmp);

    /* Recupére un pointeur sur la premiére occurence du retour charriot,
     à savoir la fin de la ligne */
    char *p_occurences = strchr(buffer, '\n');
    /* Si cette occurence n'est pas nulle */
    if (p_occurences != NULL)
    {
      /* Crée un buffer qui récupére la premiére ligne */
      char *troncat = 0;
      /* Copie dans troncat le buffer jusqu'au premier retour charriot.
        strcspn sert à récupérer la taille en caractéres de la première ligne.*/
      strncpy(troncat, buffer, strcspn(buffer, p_occurences));

      printf("%s\n", troncat);

      /* La ligne tronqué */
      char *substract = strchr(troncat, ' ');

      printf("%s\n", substract);

      /* Tant que troncat contient un espace */
      while(substract != NULL) {
        tmp++;
        /* Recopie dans un troncat  */
        strcpy(troncat, substract);
      }
    }

    printf("%d Bla", tmp);